---
import Social from "./Social.astro";

export interface Props {
  subtitle: string;
  title: string;
  tagline: string;
}

const { subtitle, title, tagline } = Astro.props;
const socials = await Astro.glob("./../pages/socials/*.md");
---

<div>
  <div class="mx-auto max-w-7xl py-12 px-4 sm:py-16 sm:px-6 lg:px-8">
    <div class="text-center">
      <div class="relative inline-block">
        <div
          class="absolute inset-0 rounded-full bg-indigo-500 blur-lg opacity-50"
        >
        </div>
        <img
          class="relative mx-auto h-40 w-40 rounded-full border-4 border-white/10 shadow-xl object-cover xl:h-48 xl:w-48"
          src="readme.png"
          alt="Profile"
        />
      </div>

      <h1
        class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl font-sans"
      >
        {title}
      </h1>

      <p class="mt-4 text-lg font-semibold text-indigo-300">
        {subtitle}
      </p>

      <p class="mx-auto mt-4 max-w-xl text-lg text-gray-400">
        {tagline}
      </p>

      <div class="mt-8 flex justify-center gap-4">
        <Social socials={socials} />
      </div>
    </div>
  </div>
</div>
