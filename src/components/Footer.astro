---
export interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;
---

<footer class="mt-auto py-8">
  <div
    class="mx-auto max-w-7xl px-4 sm:px-6 md:flex md:items-center md:justify-center lg:px-8"
  >
    <div class="text-center">
      <p class="text-base text-indigo-200/50">
        &copy; 2022 {title}. {tagline}
      </p>
      <p class="mt-2 text-sm text-indigo-200/30">
        Made with <a
          href="https://github.com/yoanbernabeu/LinkTreeFreeClone"
          class="text-indigo-400 hover:text-indigo-300 transition-colors"
          >LinkTreeFreeClone</a
        >
      </p>
    </div>
  </div>
</footer>
